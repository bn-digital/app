{
  "name": "app",
  "description": "Includes all required tools and packages to bootstrap app development using NodeJS stack",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.2",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-react-apollo": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql": "^15.5.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src --no-ignore && stylelint --fix packages/*/src",
    "lint": "prettier --check packages/*/src && eslint packages/*/src && stylelint packages/*/src",
    "cms": "yarn workspace @app/cms run all",
    "website": "yarn workspace @app/website run all",
    "start": "concurrently 'yarn:cms' 'yarn:website'",
    "graphql": "graphql-codegen",
    "postinstall": "husky install",
    "brand-new:website": "yarn dlx create-react-app --template=file:templates/react bn-digital/website",
    "brand-new:api": "yarn dlx create-strapi-app packages/api",
    "brand-new:mobile": "yarn dlx create-react-native-app --template=with-typescript packages/mobile",
    "brand-new:desktop": "yarn dlx nativefier http://localhost:3000",
    "brand-new:storybook": "yarn dlx storybook-init",
    "brand-new:static": "yarn dlx create-gatsby packages/static",
    "brand-new:http": "yarn dlx serve --cors --single build",
    "brand-new:ca": "yarn dlx mkcert create-ca --organization=BNDigital --country-code=UA --state=Kyiv --locality=Kyiv --validity=365 --cert=.ssl/ca.crt --key=.ssl/ca.key",
    "brand-new:cert": "yarn dlx mkcert create-cert --cert=.ssl/tls.crt --key=.ssl/tls.key --ca-cert=.ssl/ca.crt --ca-key=.ssl/ca.key --domains='localhost,127.0.0.1,::1,*.local,*.localhost,*.dev'"
  }
}
