{
  "name": "app",
  "description": "Includes all required tools and packages to bootstrap full-stack app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "workspaces": {
    "extends": "@bn-digital/eslint-config",
    "packages": ["packages/*"]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,less,graphql}": ["prettier --write"],
    "*.{js,jsx,ts,tsx}": ["eslint --fix"],
    "*.less": ["stylelint --fix"]
  },
  "prettier": "@bn-digital/prettier-config",
  "stylelint": {
    "extends": "@bn-digital/stylelint-config"
  },
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config"
  },
  "devDependencies": {
    "@bn-digital/eslint-config": "^1.13.34",
    "@bn-digital/prettier-config": "^1.10.5",
    "@bn-digital/stylelint-config": "^1.10.5",
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-operations": "^2.1.4",
    "@graphql-codegen/typescript-react-apollo": "^3.1.4",
    "@types/node": "^16.7.10",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "graphql": "^15.5.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "generate": "graphql-codegen",
    "cms": "yarn workspace @app/cms run start",
    "website": "yarn workspace @template/website run start",
    "upgrade": "yarn up '*'",
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src/**/*.{ts,tsx,js,jsx} && stylelint --fix packages/*/src/**/*.{less,css,scss}",
    "lint": "prettier --check packages/*/src && eslint packages/*/src/**/*.{ts,tsx,js,jsx} && stylelint --fix packages/*/src/**/*.{less,css,scss}",
    "start": "concurrently 'yarn:generate' 'yarn:cms' 'yarn:website'"
  },
  "packageManager": "yarn@3.0.2"
}
